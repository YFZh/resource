<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background="@drawable/picture_mode_img_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_ca_entitle_page"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.68"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_entitle_title"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_entitle_item_id_head"
            android:layout_width="62dp"
            android:layout_height="20dp"
            android:background="@drawable/button_state"
            android:gravity="center"
            android:text="@string/str_ca_entitle_id"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textview_ca_entitle_item_video_Head"
            android:layout_width="102dp"
            android:layout_height="20dp"
            android:background="@drawable/button_state"
            android:gravity="center"
            android:text="@string/str_ca_entitle_video_id"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textview_ca_entitle_item_date_Head"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/button_state"
            android:gravity="center"
            android:text="@string/str_ca_entitle_date"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>
    <!-- For CA Entitle List -->

    <ListView
        android:id="@+id/listentitle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:listSelector="#00000000" >
    </ListView>

    <TextView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/str_mainmenu_menu"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</LinearLayout>