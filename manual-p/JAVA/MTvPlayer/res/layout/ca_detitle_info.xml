<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background="@drawable/picture_mode_img_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_ca_detitle_page"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.68"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_detitle_title"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_detitle_item_list_head"
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:layout_weight="0.30"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_detitle_list"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textview_ca_detitle_item_state_Head"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_weight="0.11"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_detitle_state"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <!-- For CA Detitle List -->

    <ListView
        android:id="@+id/listdetitle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:listSelector="#00000000" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/email_aid"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/str_mainmenu_menu"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>