<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dip"
    android:layout_height="500dip"
    android:layout_gravity="center"
    android:background="@drawable/tv_record_list_r_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
         android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/emaildetail_theme"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/emaildetail_time"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/emaildetail_level"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dip" />
    </LinearLayout>
        <TextView
            android:id="@+id/emaildetail_content"
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:textSize="12dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="20dip"
             android:textSize="12dip"
            android:text="@string/email_del" />


</LinearLayout>