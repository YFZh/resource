<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_gravity="center_horizontal"
android:layout_width="320dp"
android:layout_height="489dp"
android:background="@drawable/list_menu_img_bg"
android:orientation="vertical"
>
	<TextView android:id="@+id/audio_language_title" android:layout_marginTop="36dp" 
	android:layout_marginLeft="27dp" android:gravity="center" android:layout_width="267dp" 
	android:layout_height="35dp" android:text="@string/str_audio_language_title"
	/>
	<ListView android:id="@+id/audio_language_list_view" android:layout_width="267dp" android:layout_marginLeft="27dp"
	android:layout_marginTop="8dp" android:listSelector="@drawable/button_state" android:layout_height="346dp"/>
	<ImageView android:id="@+id/audio_language_img_back" style="@style/program_edit_img_style"
 	android:layout_gravity="center" android:src="@drawable/record_img_hint_r" />
</LinearLayout>


