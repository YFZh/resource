<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background="@drawable/picture_mode_img_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_ca_mg"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_mg_title"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

    <!-- For CA Management(Modify PIN Info Page) -->

    <LinearLayout
        android:id="@+id/linearlayout_ca_mg_modify_pin"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:background="@drawable/button_state"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_mg_modify_pin"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_modify_pin"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>
    <!-- For CA Management(Modify Work Time Info Page) -->

    <LinearLayout
        android:id="@+id/linearlayout_ca_mg_modify_time"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:background="@drawable/button_state"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_mg_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_work_time"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- For CA Management(Watch level Info Page) -->

    <LinearLayout
        android:id="@+id/linearlayout_ca_mg_watch_level"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:background="@drawable/button_state"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_mg_level"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_watch_level"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

    <!-- For CA Management(card paired Page) -->

    <LinearLayout
        android:id="@+id/linearlayout_card_paired"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:background="@drawable/button_state"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_mg_card_paired"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_card_paired"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

    <!-- For CA Management(child parent card feed Page) -->

    <LinearLayout
        android:id="@+id/linearlayout_child_parent_card_feed"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:background="@drawable/button_state"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_ca_mg_child_parent_card_feed"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_card_feed"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="@string/str_mainmenu_menu"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</LinearLayout>