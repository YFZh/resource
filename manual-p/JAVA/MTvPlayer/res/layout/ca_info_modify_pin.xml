<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background="@drawable/picture_mode_img_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_ca_mg_pin_page"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.68"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_info_pin_title"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <!-- For CA Management(Modify PIN)) -->

    <LinearLayout
        android:id="@+id/linearlayout_ca_mg_old_pin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_ca_mg_old_pin"
            android:layout_width="204dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.38"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_old_pin"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText_ca_mg_old_pin"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.07"
            android:gravity="left|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:password="true"
            android:maxLength="6"
            android:textColor="#000000"
            android:textSize="9dp" >

        </EditText>

        <TextView
            android:id="@+id/textview_ca_mg_new_pin"
            android:layout_width="203dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.38"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_new_pin"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText_ca_mg_new_pin"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.09"
            android:gravity="left|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:password="true"
            android:maxLength="6"
            android:textColor="#000000"
            android:textSize="9dp" >

        </EditText>

        <TextView
            android:id="@+id/textview_ca_mg_new_pin2"
            android:layout_width="206dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.38"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_new_pin2"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText_ca_mg_new_pin2"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.08"
            android:gravity="left|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:password="true"
            android:maxLength="6"
            android:numeric="integer"
            android:textColor="#000000"
            android:textSize="9dp" >

        </EditText>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="90dp"
            android:layout_marginTop="60dp"
            android:text="@string/str_ca_mg_submit" />

    </LinearLayout>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/str_mainmenu_menu"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</LinearLayout>