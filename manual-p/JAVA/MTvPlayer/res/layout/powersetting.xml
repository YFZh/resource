<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background="@drawable/programme_img_info_bg"
    android:orientation="vertical" >

    <TextView
	  	android:id="@+id/textview_set_powersetting_power"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
	    android:text="@string/str_set_powersetting"
	    android:textColor="#ffffff"
        android:textSize="16dp" />
	<!-- For PowerMusic -->
	 <LinearLayout 
	 		android:id="@+id/linearlayout_set_powersetting_powermusic"
			android:layout_width="fill_parent"
			android:layout_height="33dp"
        android:background="@drawable/button_state"
			android:focusable="true"
			android:focusableInTouchMode="true"
        android:orientation="horizontal" >

			<TextView
			  	android:id="@+id/textview_set_powersetting_powermusic"
            android:layout_width="150dp"
			    android:layout_height="fill_parent" 
            android:gravity="center"
			    android:text="@string/str_set_powersetting_powermusic"
			    android:textColor="#ffffff"
            android:textSize="18dp" />

			<TextView 
				android:id="@+id/textview_set_powersetting_powermusic_val" 
            android:layout_width="150dp"
			    android:layout_height="fill_parent" 
			    android:gravity="center"
			    android:textColor="#ffffff"
            android:textSize="18dp" />
		</LinearLayout>
    <!-- For Logo -->
	 <LinearLayout 
	 		android:id="@+id/linearlayout_set_powersetting_powerlogo"
			android:layout_width="fill_parent"
			android:layout_height="33dp"
        android:background="@drawable/button_state"
			android:focusable="true"
			android:focusableInTouchMode="true"
        android:orientation="horizontal" >

			<TextView
			  	android:id="@+id/textview_set_powersetting_powerlogo"
             android:layout_width="150dp"
			    android:layout_height="fill_parent" 
            android:gravity="center"
			    android:text="@string/str_set_powersetting_powerlogo"
			    android:textColor="#ffffff"
            android:textSize="18dp" />

			<TextView 
				android:id="@+id/textview_set_powersetting_powerlogo_val" 
            android:layout_width="150dp"
			    android:layout_height="fill_parent" 
			    android:gravity="center"
			    android:textColor="#ffffff"
            android:textSize="18dp" />
		</LinearLayout>	<!-- For Volume -->	 <LinearLayout	 	 		android:id="@+id/linearlayout_set_powersetting_powervolume"	 	    			android:layout_width="fill_parent"			android:layout_height="33dp"        android:background="@drawable/pic_mode_focus_state"			android:focusable="true"			android:focusableInTouchMode="true"        android:orientation="horizontal" >	 			 					<TextView							android:id="@+id/textview_set_powersetting_powervolume"             android:layout_width="150dp"			    android:layout_height="fill_parent"             android:gravity="center"			    android:text="@string/str_set_powersetting_powervolume"			    android:textColor="#ffffff"            android:textSize="18dp" />			    			<TextView							android:id="@+id/textview_set_powersetting_powervolume_val" 			    android:layout_width="47dp" 			    android:layout_height="fill_parent" 			    android:gravity="center"			    android:textColor="#ffffff"            android:textSize="18dp" />							<SeekBar										android:layout_width="111dp"    			android:layout_height="13dp"    			android:layout_gravity="center"            android:layout_marginRight="15dp"				android:max="100"				android:progress="50"				android:thumb="@drawable/picture_mode_img_bar"				android:thumbOffset="0dp"				            android:visibility="gone" />		</LinearLayout>
	</LinearLayout>
