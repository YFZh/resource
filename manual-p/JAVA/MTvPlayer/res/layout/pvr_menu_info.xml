<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/pvr_menu_info_layout"
        android:layout_height="277dip"
        android:layout_width="279dip"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/tv_record_list_r_bg">
        <TextView
            android:text="@string/str_pvr_listview_item"
            android:id="@+id/pvr_menu_info_title"
            android:layout_width="267dip"
            android:layout_height="35dip"
            android:gravity="center"></TextView>
        <TextView
            android:focusable="true"
            android:text="@string/str_pvr_listview_item"
            android:id="@+id/pvr_menu_info_subtitle"
            android:layout_width="267dip"
            android:layout_height="35dip"
            android:gravity="center"
            android:background="@drawable/programme_epg_selcet"></TextView>
        <ListView
            android:listSelector="@drawable/button_state"
            android:layout_height="184dip"
            android:id="@+id/pvr_menu_info_list_view"
            android:layout_width="267dip"></ListView>
        <ImageView
            android:src="@drawable/common_img_ok"
            android:layout_height="24dip"
            android:layout_width="41dip"></ImageView>
    </LinearLayout>

</LinearLayout>
