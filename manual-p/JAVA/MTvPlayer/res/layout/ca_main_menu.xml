<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="275dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background = "@drawable/picture_mode_img_bg"
    >
    <LinearLayout 
    android:id="@+id/linearlayout_ca_main_menu"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="33dp"
	>
	 	<TextView 
	    android:layout_width="wrap_content" 
	    android:layout_height="40dp" 
	    android:gravity="left"
	    android:text="@string/str_ca_title"
	    android:textColor="#ffffff"
	    android:textSize="15dp"
	    android:background="@drawable/button_state"
	    />	
	  
 	</LinearLayout>
	
        <!-- For CA Version -->
	 <LinearLayout 
	 		android:id="@+id/linearlayout_ca_card_version"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="33dp"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:background="@drawable/button_state"
			>

			<TextView
			    android:id="@+id/textview_ca_card_version"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_marginLeft="20dp"
			    android:gravity="left|center_vertical"
			    android:text="@string/str_ca_card_version"
			    android:textColor="#ffffff"
			    android:textSize="15dp" />
											
		</LinearLayout>
		
	<!-- For CA Information -->

	 <LinearLayout
	     android:id="@+id/linearlayout_ca_card_info"
	     android:layout_width="fill_parent"
	     android:layout_height="25dp"
	     android:background="@drawable/button_state"
	     android:focusable="true"
	     android:focusableInTouchMode="true"
	     android:orientation="horizontal" >

	     <TextView
	         android:id="@+id/textview_ca_card_info"
	         android:layout_width="80dp"
	         android:layout_height="fill_parent"
	         android:layout_marginLeft="20dp"
	         android:layout_weight="0.35"
	         android:gravity="left|center_vertical"
	         android:text="@string/str_ca_card_info"
	         android:textColor="#ffffff"
	         android:textSize="15dp" />
	 </LinearLayout>

		<!-- For CA Card Management -->

	 <LinearLayout
	     android:id="@+id/linearlayout_ca_card_management"
	     android:layout_width="fill_parent"
	     android:layout_height="25dp"
	     android:background="@drawable/button_state"
	     android:focusable="true"
	     android:focusableInTouchMode="true"
	     android:orientation="horizontal" >

	     <TextView
	         android:id="@+id/textview_ca_card_management"
	         android:layout_width="80dp"
	         android:layout_height="fill_parent"
	         android:layout_marginLeft="20dp"
	         android:layout_weight="0.39"
	         android:gravity="left|center_vertical"
	         android:text="@string/str_ca_card_management"
	         android:textColor="#ffffff"
	         android:textSize="15dp" />
	 </LinearLayout>

	 <TextView
	     android:layout_width="60dp"
	     android:layout_height="18dp"
	     android:layout_marginLeft="180dp"
	     android:layout_marginTop="190dp"
	     android:gravity="center"
	     android:text="@string/str_mainmenu_menu"
	     android:textColor="#ffffff"
	     android:textSize="9dp" />

</LinearLayout>

