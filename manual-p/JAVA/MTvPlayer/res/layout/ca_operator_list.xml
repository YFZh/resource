<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="336dp"
    android:layout_gravity="center"
    android:background="@drawable/picture_mode_img_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_ca_operator_page"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.68"
            android:background="@drawable/button_state"
            android:gravity="left"
            android:text="@string/str_ca_operator_title"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
		      <TextView
	          android:id="@+id/textview_ca_operator_item_id_head"
	          android:layout_height="19dp"
	          android:layout_width="70dp"
	          android:background="@drawable/button_state"
	          android:text="@string/str_ca_op_id"
	          android:gravity="center"
	          android:textColor="#ffffff"
	          android:textSize="12dp" />

           <TextView
               android:id="@+id/textview_ca_operator_item_operator_id_Head"
               android:layout_width="180dp"
               android:layout_height="20dp"
               android:background="@drawable/button_state"
               android:gravity="center"
               android:text="@string/str_ca_op_operator_id"
               android:textColor="#ffffff"
               android:textSize="12dp" />
      </LinearLayout>
    <!-- For OPerator List -->

    <ListView
        android:id="@+id/listOperator"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:listSelector="#00000000" >
     
    </ListView>
    
    <TextView
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/str_mainmenu_menu"
        android:textColor="#ffffff"
        android:textSize="9dp" />

</LinearLayout>