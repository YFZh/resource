<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    style="@style/menu3d_sty_menu">   <!--   <LinearLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">               </TextView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView><ImageView style="@style/sound_sty_enabledot" >        </ImageView><ImageView style="@style/pic_mode_sty_disabledot" >        </ImageView>    </LinearLayout>-->   <TextView        android:layout_width="fill_parent"            android:layout_height="25dp"            android:gravity="center"            android:text="@string/str_3d_3d"            android:textColor="#FFFFFF"            android:textSize="18dp" />    <ScrollView        android:layout_width="fill_parent"        android:layout_height="280dp"        android:layout_marginTop="3dp"        android:orientation="vertical" >        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:orientation="vertical" >             <!-- For 3D Self-Adaptive Detect Triple -->            <LinearLayout                android:id="@+id/linearlayout_3d_self_adaptive_detecttriple"                style="@style/menu3d_sty_combo_btn"                 android:layout_marginTop="3dp">                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_self_adaptive_detecttriple" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout>            <!-- For 3D Conversion -->            <LinearLayout                android:id="@+id/linearlayout_3d_conversion"                style="@style/menu3d_sty_combo_btn" >                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_conversion" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout>            <!-- For 3Dto2D Mode -->            <LinearLayout                android:id="@+id/linearlayout_3d_3dto2d"                style="@style/menu3d_sty_combo_btn" >                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_3dto2d" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout>            <!-- For 3D Depth -->            <LinearLayout                android:id="@+id/linearlayout_3d_3ddepth"                style="@style/menu3d_sty_combo_btn" >                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_3ddepth" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout> <!-- For 3D Offset -->            <LinearLayout                android:id="@+id/linearlayout_3d_3doffset"                style="@style/menu3d_sty_combo_btn" >                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_3doffset" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout>            <!-- For 3D Output Aspect -->            <LinearLayout                android:id="@+id/linearlayout_3d_3doutputaspect"                style="@style/menu3d_sty_combo_btn" >                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_3doutputaspect" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout>            <!-- For LR View Switch -->            <LinearLayout                android:id="@+id/linearlayout_3d_lrswitch"                style="@style/menu3d_sty_combo_btn" >                <ImageView style="@style/menu3d_sty_leftarrow" >                </ImageView>                <TextView                    style="@style/menu3d_sty_combo_name"                    android:text="@string/str_3d_lrswitch" />                <TextView style="@style/menu3d_sty_combo_indicator" />                <ImageView style="@style/menu3d_sty_rightarrow" >                </ImageView>            </LinearLayout>        </LinearLayout>    </ScrollView> <!--    <TextView        android:layout_width="80dp"        andr