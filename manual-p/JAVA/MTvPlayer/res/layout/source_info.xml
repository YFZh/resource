<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="1280dip"
    android:layout_width="720dip">
    <LinearLayout style="@style/source_info_bg_style">
        <ImageView style="@style/source_info_idle_img_press_ststus_bg_l_style"></ImageView>
        <LinearLayout
            style="@style/source_info_idle_img_press_ststus_bg_m_style">
            <ImageView
                android:id="@+id/source_info_imageView"
                style="@style/source_info_sound_logo_style"></ImageView>
            <ImageView
                style="@style/source_info_idle_img_press_ststus_separator_style"></ImageView>
            <LinearLayout
                android:id="@+id/source_info_combom_linearlayout"
                style="@style/source_info_text_view_layout_style">
                <LinearLayout
                    android:layout_height="27dip"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/source_info_title"
                        style="@style/source_info_text_view_style" />
                    <TextView
                        android:id="@+id/source_info_video_format"
                        style="@style/source_info_text_view_style" />
                </LinearLayout>
                <TextView
                    android:id="@+id/source_info_textview"
                    style="@style/source_info_text_view_indicator_normal_style" />
            </LinearLayout>
        </LinearLayout>
        <ImageView style="@style/source_info_idle_img_press_ststus_bg_r_style"></ImageView>
    </LinearLayout>
</LinearLayout>